{
  "name": "zk-medical-data-exchange",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:web": "bun run --cwd apps/web dev",
    "dev:api": "bun run --cwd apps/api dev",
    "infra": "docker compose -f infra/docker-compose.yaml up -d",
    "deploy:contracts:local": "bun run --cwd packages/smart-contracts deploy:local",
    "deploy:contracts:sepolia": "bun run --cwd packages/smart-contracts deploy:sepolia",
    "generate:abis": "node --import tsx/esm --eval \"import('./apps/api/scripts/generateABIs.ts').then(m => m.generateABIs())\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:web": "bun run --cwd apps/web lint",
    "lint:api": "bun run --cwd apps/api lint",
    "coverage": "bun test --coverage",
    "test:web": "bun run --cwd apps/web test",
    "test:api": "bun run --cwd apps/api test",
    "test:contracts": "bun run --cwd packages/smart-contracts test",
    "test:contracts:solidity": "bun run --cwd packages/smart-contracts test:solidity",
    "test:contracts:nodejs": "bun run --cwd packages/smart-contracts test:nodejs",
    "test:contracts:zk-proof": "bun run --cwd packages/smart-contracts test:zk-proof"
  },
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/smart-contracts",
    "packages/shared"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@lighthouse-web3/sdk": "^0.4.2",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.89.0",
    "@web3auth/modal": "^10.3.1",
    "ajv": "^8.17.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "pino": "^9.10.0",
    "typescript-eslint": "^8.41.0",
    "wagmi": "^2.16.9"
  }
}
